<h1>Games</h1>
<h2 class="centered"><%= @tabletop_game.set_name %></h2>
<br><br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Game Name</th>
      <% if @admin %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
      <% if @admin %>
        <td class="name"><%= link_to "#{game.name}", edit_game_path(game.id) %></td>
        <td class="">
          <%= button_to('Delete Game', game,
                        method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs') %>
        </td>
      <% else %>
        <td class="name"><%= game.name %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @admin %>
  <%= link_to "Create a New Game", new_game_path, class: "btn btn-primary" %>
<% end %>
