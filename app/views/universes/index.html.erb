<h1 class="centered">Universe</h1>

<% if @universes != nil %>
  <!--<div style="width:100%;height:300px;white-space:nowrap;">-->
    <% @universes.each do |uni| %>

      <div class="parent_container">
        <%= link_to image_tag(uni.image, height: '200px', width: '200px'), {:controller => "comics", :action => "index", :universe => uni.id} %>
        <br>
        <div class="btn-group">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width: 200px;"><%= uni.universe_name %>
            <span class="caret"></span></button>
            <% if @admin %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "edit", edit_universe_path(uni.id) %></li>
              </ul>
           <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <!--</div>-->
<% end %>

<br><br />
<% if @admin %>
  <%= link_to 'New Universe', new_universe_path, class: "btn btn-primary" %>
<% end %>
