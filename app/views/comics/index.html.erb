<h1>Comics</h1>
<h2 class="centered"><%= @universe.universe_name %></h2>
<br><br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Comic Name</th>
      <th>Condition</th>
      <th class="text-right">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @comics.each do |comic| %>
      <%= render partial: 'comic_row', locals: { comic: comic, order_item: @order_item } %>
    <% end %>
  </tbody>
</table>

<% if @admin %>
  <%= link_to "Add a new Comic", new_comic_path, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Universe", universes_path, class: "btn btn-primary" %>
