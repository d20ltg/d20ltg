<h1>Comics</h1>
<h2 class="centered"><%= @universe.universe_name %></h2>
<br><br />

<table class="table table-hover">
  <thead>
    <tr>
      <th>Comic Name</th>
      <th>Condition</th>
      <!--<th class="text-right">Actions</th>-->
    </tr>
  </thead>
  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td class="name"><%= link_to "#{comic.comic_name}", comic_path(comic.id) %></td>
	<td class="type"><%= comic.condition %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @admin %>
  <%= link_to "Add a new Comic", new_comic_path, class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Universe", universes_path, class: "btn btn-primary" %>
