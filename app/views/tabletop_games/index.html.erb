<div>
  <%= image_tag("board_games.jpg", height: '300px', width: '100%') %>
  <h2 class="imageText"><span>Tabletop Games</span></h2>
</div>


<% if @tabletop_games != nil %>
  <!--<div style="width:100%;height:300px;white-space:nowrap;">-->
    <% @tabletop_games.each do |tg| %>

      <div class="parent_container">
        <%= link_to image_tag(tg.image, height: '200px', width: '200px'), {:controller => "games", :action => "index", :tabletop_game => tg.id} %>
        <br>
        <div class="btn-group">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="width: 200px;"><%= tg.set_name %>
            <span class="caret"></span></button>
            <% if @admin %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "edit", edit_tabletop_game_path(tg.id) %></li>
              </ul>
           <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <!--</div>-->
<% end %>

<br /><br />

<% if @admin %>
  <%= link_to 'New Tabletop Game', tabletop_games_new_path, class: "btn btn-primary" %>
<% end %>
